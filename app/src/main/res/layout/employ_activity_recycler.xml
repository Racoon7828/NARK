<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout">
        <TextView
            android:id="@+id/employ_activity_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:gravity="left"
            android:layout_gravity="left"
            android:textSize="30sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button_for_bill"
            android:layout_alignParentRight="true"
            android:text="채용 정보 사이트 바로가기"
            android:textColor="@color/white"
            android:id="@+id/employ_activity_recyclerBtn"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="소속기관명 : "
                    android:gravity="left"
                    android:layout_gravity="left|top"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/employ_activity_aiName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="소속기관정보"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="작성일자 : "
                    android:gravity="left"
                    android:layout_gravity="left|top"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/employ_activity_dateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="작성일자정보"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/employ_activity_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="내용정보"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>